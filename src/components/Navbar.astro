---
interface Props {
    header_text?: string;
}
const { header_text } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
    { href: "/archive", label: "archive" },
];
---

<ul class="font-light mb-10 flex items-center justify-between w-full">
    <li>
        <a
            href="/"
            class="text-slate-950 dark:text-slate-50 no-underline font-medium hover:text-rose-500 transition-colors"
        >
            sanket's
        </a>
    </li>
    <li class="lowercase flex space-x-4 items-center">
        {
            navLinks.map((link) => (
                <a
                    href={link.href}
                    aria-current={
                        currentPath === link.href ? "page" : undefined
                    }
                    class="text-rose-500 hover:text-orange-500 transition-colors"
                    target={link.href.startsWith("http") ? "_blank" : undefined}
                >
                    {link.label}
                </a>
            ))
        }
    </li>
</ul>
