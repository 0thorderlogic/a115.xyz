---
interface Props {
    header_text?: string;
}
const { header_text } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [{ href: "/archive", label: "archive" }];
---

<ul
    class="font-normal mb-12 flex items-center justify-between w-full border-b border-slate-200 dark:border-slate-800 pb-4"
>
    <li>
        <a
            href="/"
            class="text-xl font-display font-black tracking-tighter hover:text-rose-500 transition-colors"
        >
            sanket's
        </a>
    </li>
    <li class="lowercase flex space-x-6 items-center">
        {
            navLinks.map((link) => (
                <a
                    href={link.href}
                    aria-current={
                        currentPath === link.href ? "page" : undefined
                    }
                    class={`text-sm font-medium tracking-wide uppercase hover:text-rose-500 transition-colors ${currentPath === link.href ? "text-rose-500" : "text-slate-500 dark:text-slate-400"}`}
                    target={link.href.startsWith("http") ? "_blank" : undefined}
                >
                    {link.label}
                </a>
            ))
        }
    </li>
</ul>
