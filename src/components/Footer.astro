---
interface Props {
    email?: string;
}
const { email } = Astro.props;
---

<footer
    class="mt-24 border-t border-slate-200 dark:border-slate-800 pt-12 pb-16 lowercase"
>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
        <div class="space-y-4">
            <h3
                class="text-[10px] font-bold text-rose-500 uppercase tracking-[0.2em]"
            >
                contact / mail
            </h3>
            <a
                href={`mailto:${email}`}
                class="text-2xl font-display font-bold hover:text-rose-500 transition-colors block"
                >{email}</a
            >
            <p class="text-sm text-slate-500">
                last updated: <span id="last-updated"></span>
            </p>
        </div>
        <div class="md:text-right space-y-4">
            <h3
                class="text-[10px] font-bold text-rose-500 uppercase tracking-[0.2em]"
            >
                links / dev
            </h3>
            <div class="flex flex-col md:items-end space-y-2">
                <a
                    href="./0x7BC1D368-pub.asc"
                    class="text-lg font-medium border-b border-slate-200 dark:border-slate-800 hover:text-rose-500 hover:border-rose-500 transition-all inline-block"
                    >pgp key</a
                >
                <a
                    href="https://github.com/0thorderlogic/a115.xyz"
                    class="text-lg font-medium border-b border-slate-200 dark:border-slate-800 hover:text-rose-500 hover:border-rose-500 transition-all inline-block"
                    >source code</a
                >
            </div>
        </div>
    </div>
</footer>
<script>
    const lastUpdatedElem = document.getElementById("last-updated");
    if (lastUpdatedElem) {
        lastUpdatedElem.textContent = new Date(
            document.lastModified,
        ).toLocaleDateString();
    }
</script>
