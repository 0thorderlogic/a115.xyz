---
interface Props {
    email?: string;
}
const { email } = Astro.props;

---
<hr class="mt-10 dark:bg-gray-700"/>
<div class="font-light grid grid-cols-2 grid-rows-1">
    <p>
        <a href=`mailto:${email}`>{email}</a><br/>
        <span class="grey font-mono uppercase">Last updated: <span id="last-updated"></span></span>
    </p>
    <p class="text-right">
        <a href="./0x7BC1D368-pub.asc">pgp</a><br/>
        <a href="/sitemap-index.xml">sitemap</a><br/>
        <a href="https://github.com/0thorderlogic/website">source</a><br/>
    </p>
</div>
<hr/>
<script>
    const lastUpdatedElem = document.getElementById('last-updated');
    if (lastUpdatedElem) {
        lastUpdatedElem.textContent = new Date(document.lastModified).toLocaleDateString();
    }
</script>